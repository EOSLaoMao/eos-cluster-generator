  nodeosd-{name}:
    image: {image}
    command: nodeos --config-dir /opt/eosio/bin/data-dir -d /opt/eosio/bin/data-dir --genesis-json /opt/eosio/bin/data-dir/genesis.json --contracts-console
    hostname: nodeosd
    container_name: nodeosd-{name}
    ports:
      - {port}:{port}
      - {http_port}:{http_port}
    expose:
      - "{port}"
      - "{http_port}"
    volumes:
      - ./data/eos-{name}/:/opt/eosio/bin/data-dir
